// Place your settings in this file to overwrite default and user settings.
{
    // Unofficially, QMK uses spaces for indentation
    "editor.insertSpaces": true,
    // Configure glob patterns for excluding files and folders.
    "files.exclude": {
        "**/.build": true,
        "**/*.hex": true,
        "**/*.bin": true,

        // mine
        "quantum": true,
        "tests": true,
        "tmk_core": true,
        "platforms": true,
        "nix": true,
        "lib": true,
        "bin": true,
        "docs": true,
        "data": true,
        "api_data": true,
        ".github": true,
        "Dockerfile": true,
        "drivers": true,
        "message.mk": true,
        "Vagrantfile": true,
        "nose2.cfg": true,
        "license*.md": true,
        "CODE_OF_CONDUCT.md": true,
        "book.json": true,
        ".travis.yml": true,
        ".editorconfig": true,
        "Doxyfile": true,
        "doxygen-todo": true,
        "*.mk": true,
        "util": true,
        "LICENSE": true,
        "secrets.tar.enc": true,
        "shell.nix": true,
        "requirements*.txt": true,
        "Makefile": true,
    },
    "files.associations": {
        "*.h": "c",
        "*.c": "c",
        "*.inc": "c",
        "*.cpp": "cpp",
        "*.hpp": "cpp",
        "xstddef": "c",
        "type_traits": "c",
        "utility": "c",
        "ranges": "c"
    },
    "[markdown]": {
        "editor.trimAutoWhitespace": false,
        "files.trimTrailingWhitespace": false
    },
    "python.formatting.provider": "yapf",
    "[json]": {
	    "editor.formatOnSave": false
    }
}
